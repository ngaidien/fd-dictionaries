#	$(XEROX) -d ../dicts/$*1.dic ../dicts/$*.dic
#	rm -f ../dicts/$*1.dic

.dict.dz:
	dictzip -k ../dicts/$*.dict

.dz.tar.gz:
	if [ ! -d ../dicts ]; then mkdir ../dicts/bin; fi
	(cd ../dicts/ ; tar czvf bin/$*.tar.gz $*.dict.dz $*.index)

.fo.pdf:
	pdfxmltex $*.fo

.tei.fo:
	$(XSLPROCESSOR) -o $*.fo $(TEIFO) $*.tei

all: $(LANGUAGE).tar.gz

